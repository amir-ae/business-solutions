@page
@model AddItemModel
@{
    ViewBag.Workflow = "CreateOrder";
}

<form method="post">
    <input type="hidden" asp-for=Order />
    <input type="hidden" asp-for=Item />
    <div class="form-group my-2">
        <label asp-for="NewItem.Name"></label>
        <div>
            <span asp-validation-for="NewItem.Name" class="text-warning"></span>
        </div>
        <input asp-for="NewItem.Name" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="NewItem.Quantity"></label>
        <input asp-for="NewItem.Quantity" type="number" min="1" value="1" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="NewItem.Unit"></label>
        <div>
            <span asp-validation-for="NewItem.Unit" class="text-warning"></span>
        </div>
        <input asp-for="NewItem.Unit" class="form-control" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Add</button>
        <a asp-page="CreateOrder" asp-route-order=@Model.Order class="btn btn-secondary">Cancel</a>
    </div>
</form>




